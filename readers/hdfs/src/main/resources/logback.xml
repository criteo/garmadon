<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.criteo" level="INFO" />
    <logger name="org.apache.kafka.common.utils.AppInfoParser" level="INFO" />
    <logger name="org.apache.kafka.clients.consumer.ConsumerConfig" level="INFO" />

    <logger name="org.apache.hadoop.hdfs.RemoteBlockReader2" level="TRACE" />
    <logger name="org.apache.hadoop.hdfs.DFSClient" level="INFO" />
    <logger name="org.apache.hadoop.net.SocketIOWithTimeout" level="INFO" />
    <logger name="org.apache.hadoop.hdfs.protocol.datatransfer.PacketReceiver" level="TRACE" />

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>